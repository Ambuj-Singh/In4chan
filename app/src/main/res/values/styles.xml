<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_grey</item>
    </style>

    <style name="TextAppearance.AppCompat.Notification.Title" parent="TextAppearance.Compat.Notification.Title" />

    <style name="TextAppearance.AppCompat.Notification.Time" parent="TextAppearance.Compat.Notification.Time" />

    <style name="TextAppearance.AppCompat.Notification.Info" parent="TextAppearance.Compat.Notification.Info" />

    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

    <style name="Title_black" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

    <style name="title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/mons_reg</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="validating" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminateTint">@color/white</item>
    </style>
    <style name="validating_black" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminateTint">@color/black</item>
    </style>
    <style name="custom_butt" parent="Widget.Material3.Button.TextButton">
        <item name="android:background">@color/BlueTone</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="custom_butt_transparent" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyDarkToolbarStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
    </style>
</resources>